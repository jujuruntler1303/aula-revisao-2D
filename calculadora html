<meta name="viewport" content="width=device-width, initial-scale=1.0">
<title>Calculadora de Soma</title>
<style>
    body {
        font-family: Arial, sans-serif;
    }
    .calculator {
        width: 300px;
        margin: 0 auto;
        border: 1px solid #ccc;
        border-radius: 5px;
        padding: 10px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
    }
    .calculator input[type="button"] {
        width: 70px;
        height: 50px;
        margin: 5px;
        font-size: 20px;
    }
</style>
</head>
<body>

<div class="calculator">
    <input type="text" id="num1" placeholder="Número 1">
    <br>
    <input type="text" id="num2" placeholder="Número 2">
    <br>
    <input type="button" value="Somar" onclick="soma()">
    <br>
    <input type="text" id="resultado" placeholder="Resultado" disabled>
</div>

<script>
    function soma() {
        var num1 = parseFloat(document.getElementById('num1').value);
        var num2 = parseFloat(document.getElementById('num2').value);
        var resultado = num1 + num2;
        document.getElementById('resultado').value = resultado;
    }
</script>

</body>
</html>

